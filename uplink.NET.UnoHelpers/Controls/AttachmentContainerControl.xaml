<UserControl
    x:Class="uplink.NET.UnoHelpers.Controls.AttachmentContainerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:uplink.NET.UnoHelpers.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:uplink.NET.UnoHelpers.ViewModels"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <ListView ItemsSource="{Binding Content, Mode=TwoWay}" SelectionChanged="SelectionChanged" CanDragItems="True" CanReorderItems="True" AllowDrop="True"
              SelectionMode="None"
              HorizontalContentAlignment="Center" HorizontalAlignment="Center">
        <ListView.ItemTemplate>
            <DataTemplate>
                <Border BorderBrush="{Binding IsCover, Mode=OneWay, Converter={StaticResource TrueIsHiglightedConverter}, ConverterParameter={StaticResource StorjDefaultBrush}}" BorderThickness="2" CornerRadius="10" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Grid>
                        <Image Source="{Binding AttachmentThumbnail, Mode=OneWay}" Stretch="UniformToFill" Width="260" Height="200" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Grid>
                </Border>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</UserControl>
